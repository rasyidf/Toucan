<UserControl
    x:Class="Toucan.Views.TranslationDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Toucan.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Toucan.Views"
        xmlns:components="clr-namespace:Toucan.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Foreground="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <c:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="6,6,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ui:DynamicScrollViewer x:Name="ContentScroller">
                <StackPanel x:Name="PagingContainer">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Margin" Value="0,0,0,5" />
                                </Style>
                                <Style TargetType="{x:Type Separator}">
                                    <Setter Property="Margin" Value="0,10,0,5" />
                                </Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Margin" Value="0,0,0,3" />
                                </Style>
                            </Style.Resources>
                            <Setter Property="Margin" Value="5" />
                        </Style>
                    </StackPanel.Resources>

                    <StackPanel>
                        <ItemsControl x:Name="languageGroupContainer" ItemsSource="{Binding PagingController.PageData}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:TranslationItemView DataContext="{Binding}" UpdateLanguageValue="LanguageValue_KeyUp" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ui:DynamicScrollViewer>

            <StatusBar
            x:Name="RootStatusBar"
            Grid.Row="3"
            MinHeight="0"
            Margin="0"
            Padding="4,2">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" /> 
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem> 
                    <components:PaginationControl
                        PageButtons="{Binding PageButtons}"
                        PageMessage="{Binding PageMessage}"
                        HasPreviousPage="{Binding PagingController.HasPreviousPage}"
                        HasNextPage="{Binding PagingController.HasNextPage}"
                        IsPartial="{Binding PagingController.IsPartial}"
                        FirstPageCommand="{Binding FirstPageCommand}"
                        PreviousPageCommand="{Binding PreviousPageCommand}"
                        NextPageCommand="{Binding NextPageCommand}"
                        LastPageCommand="{Binding LastPageCommand}"
                        GoToPageCommand="{Binding GoToPageCommand}"
                        ShowAllCommand="{Binding ShowAllCommand}" />
                </StatusBarItem>  
            </StatusBar> 

        </Grid>
    </Border>
</UserControl>
