<ui:FluentWindow
    x:Class="Toucan.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Toucan.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Toucan"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:views="clr-namespace:Toucan.Views"
    Width="858"
    Height="650"
    MinWidth="800"
    MinHeight="600"  
    d:DesignHeight="450" 
    ui:Design.Background="white"
    ui:Design.Foreground="#0a0a0a"
    ExtendsContentIntoTitleBar="True"
    Loaded="Window_Loaded"
    WindowBackdropType="Tabbed"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen" 
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding
            Key="N"
            Command="{Binding NewFolderCommand}"
            Modifiers="Ctrl+Shift" />
        <KeyBinding
            Key="O"
            Command="{Binding OpenFolderCommand}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="R"
            Command="{Binding OpenRecentCommand}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="S"
            Command="{Binding SaveCommand}"
            Modifiers="Ctrl" />
        <KeyBinding Key="F12" Command="{Binding SaveToCommand}" />
        <KeyBinding
            Key="F4"
            Command="{Binding CloseProjectCommand}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="F4"
            Command="{Binding ExitCommand}"
            Modifiers="Alt" />
    </Window.InputBindings>
    <Window.Resources>
        <converters:LanguageNameConverter x:Key="LanguageConverter" />
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                x:Name="TreeColumn"
                Width="250"
                MinWidth="230"
                MaxWidth="530" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition x:Name="ContentColumn" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="titleBar" Height="auto" />
            <RowDefinition x:Name="menuRow" />
            <RowDefinition x:Name="footerRow" Height="32" />

        </Grid.RowDefinitions>
        <ui:TitleBar
            Title=""
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Height="51"
            VerticalAlignment="Center"
            Icon="/Views/WindowIcon.ico" />

        <Menu
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Width="350"
            Margin="51,0,0,0"
            HorizontalAlignment="Left"
            Background="{x:Null}">
            <ui:MenuItem AutomationProperties.AccessKey="F" Header="_File">
                <ui:MenuItem
                    Width="250"
                    Command="{Binding NewFolderCommand}"
                    Header="_New project"
                    InputGestureText="Ctrl+Shift+N"
                    SymbolIcon="Document20" />
                <ui:MenuItem
                    Command="{Binding OpenFolderCommand}"
                    Header="_Open project"
                    InputGestureText="Ctrl+O"
                    SymbolIcon="Folder20" />
                <ui:MenuItem
                    Command="{Binding OpenRecentCommand}"
                    Header="_Open recent"
                    InputGestureText="Ctrl+R"
                    IsEnabled="true" />
                <Separator />
                <ui:MenuItem
                    Command="{Binding SaveCommand}"
                    Header="_Save project"
                    InputGestureText="Ctrl+S"
                    SymbolIcon="Save20" />
                <ui:MenuItem
                    Command="{Binding SaveToCommand}"
                    Header="Save _As"
                    InputGestureText="F12"
                    SymbolIcon="SaveArrowRight20" />
                <ui:MenuItem
                    Command="{Binding CloseProjectCommand}"
                    Header="Close"
                    InputGestureText="Ctrl+F4" />
                <Separator />
                <ui:MenuItem
                    Header="Import..."
                    IsEnabled="False"
                    SymbolIcon="ArrowExportLtr20" />
                <ui:MenuItem
                    Header="Export..."
                    IsEnabled="False"
                    SymbolIcon="ArrowImport20" />
                <Separator />
                <ui:MenuItem
                    Command="{Binding ShowPreferencesCommand}"
                    Header="Preferences"
                    SymbolIcon="Settings20" />
                <Separator />
                <ui:MenuItem
                    Command="{Binding ExitCommand}"
                    Header="_Exit"
                    InputGestureText="Alt+F4" />
            </ui:MenuItem>
            <ui:MenuItem Name="itemMenu" Header="_Edit">
                <ui:MenuItem
                    MinWidth="190"
                    Header="Add Language"
                    InputGestureText="Ctrl+L" />
                <Separator />
                <ui:MenuItem
                    Click="NewItem"
                    Header="Add _ID"
                    InputGestureText="Ctrl+I" />
                <ui:MenuItem
                    Click="RenameItem"
                    Header="_Rename"
                    InputGestureText="F2" />
                <ui:MenuItem
                    Click="DeleteItem"
                    Header="_Remove IDs"
                    InputGestureText="Del"
                    IsEnabled="False" />
                <Separator />
                <ui:MenuItem Header="_Pre-Translate..." IsEnabled="False" />
                <ui:MenuItem Header="_Fill empty translations..." IsEnabled="False" />
                <ui:MenuItem Header="_Delete unused translations..." IsEnabled="False" />

                <Separator />
                <ui:MenuItem Header="Convert case">
                    <ui:MenuItem Header="_lowercase" IsEnabled="False" />
                    <ui:MenuItem Header="_UPPERCASE" IsEnabled="False" />
                    <ui:MenuItem Header="_Sentence case" IsEnabled="False" />
                    <ui:MenuItem Header="_Title Case" IsEnabled="False" />
                </ui:MenuItem>
                <ui:MenuItem Header="Remove whitespaces">
                    <ui:MenuItem Header="_Trim" IsEnabled="False" />
                    <ui:MenuItem Header="Trim _line by line" IsEnabled="False" />
                    <Separator />
                    <ui:MenuItem Header="_Simplify" IsEnabled="False" />

                </ui:MenuItem>
                <Separator />
                <ui:MenuItem
                    Header="Cut"
                    IsEnabled="False"
                    SymbolIcon="Cut20" />
                <ui:MenuItem
                    Header="Copy"
                    IsEnabled="False"
                    SymbolIcon="Copy20" />
                <ui:MenuItem
                    Header="Paste"
                    IsEnabled="False"
                    SymbolIcon="ClipboardPaste20" />
            </ui:MenuItem>
            <ui:MenuItem Header="Find">
                <ui:MenuItem
                    Header="Find"
                    IsEnabled="False"
                    SymbolIcon="Search20" />
                <ui:MenuItem
                    Header="Find Next"
                    IsEnabled="False"
                    SymbolIcon="SlideSearch20" />
                <ui:MenuItem
                    Header="Set Filter"
                    IsEnabled="False"
                    SymbolIcon="Filter20" />
                <ui:MenuItem
                    Header="Filter By ID"
                    IsEnabled="False"
                    SymbolIcon="FilterSync20" />
                <ui:MenuItem
                    Header="Show untranslated"
                    IsEnabled="False"
                    SymbolIcon="PhotoFilter20" />
                <ui:MenuItem
                    Header="Clear"
                    IsEnabled="False"
                    SymbolIcon="FilterDismiss20" />
            </ui:MenuItem>
            <ui:MenuItem Header="Views">
                <ui:MenuItem Header="Tree View" SymbolIcon="TextBulletListTree20" />
                <ui:MenuItem Header="List View" SymbolIcon="List20" />
                <Separator />
                <ui:MenuItem Header="Show machine translations" />
                <ui:MenuItem Header="Show thesaurus" />
                <Separator />
                <ui:MenuItem Header="Statistics" />
            </ui:MenuItem>

            <ui:MenuItem Header="Help">
                <ui:MenuItem
                    Width="150"
                    Command="{Binding HelpHomepageCommand}"
                    Header="Homepage" />
                <ui:MenuItem
                    Width="150"
                    Command="{Binding HelpAboutCommand}"
                    Header="About" />
            </ui:MenuItem>
        </Menu>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2" />
                <RowDefinition Height="280" />
            </Grid.RowDefinitions>
            <GridSplitter
                Grid.Row="1"
                Grid.Column="0"
                Height="3"
                HorizontalAlignment="Stretch"
                Background="#0CFFFFFF" />
            <views:ResourcesView
                x:Name="resourcesView" 
                NewItem="NewItem"
                SelectionChanged="TreeNamespace_SelectedItemChanged" />

            <views:LanguagesView
                x:Name="languagesView"
                Grid.Row="3"
                Grid.Column="0" />

        </Grid>

        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="3"
            Margin="0,16,-3,0"
            HorizontalAlignment="Stretch"
            Background="#01FFFFFF" />
        <ui:TextBox
            x:Name="SearchFilterTextbox"
            Grid.Column="2"
            Width="205"
            Height="32"
            MinWidth="200"
            Padding="0,6,0,8"
            HorizontalAlignment="Center"
            Background="#0F020202"
            Icon="Search16"
            IconPlacement="Right"
            PlaceholderText="  Toucan"
            TextChanged="SearchFilterTextbox_TextChanged" />

        <views:TranslationDetailsView
            x:Name="translationDetailsView"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="2"
            Margin="0,2,0,0" 
            FirstPageClick="FirstPage"
            LastPageClick="LastPage"
            NextPageClick="NextPage"
            PreviousPageClick="PreviousPage"
            ShowAllClick="ShowAll"
            UpdateLanguageValue="UpdateLanguageValue" />
        <Grid
            x:Name="StatusBar"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Background="#0CFFFFFF">
            <TextBlock
                Width="80"
                Height="23"
                Margin="10,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{Binding StatusText}"
                TextWrapping="Wrap" />
            <ui:Button
                Margin="790,0,0,0"
                Icon="Wand16" />
            <ui:Button
                Margin="747,0,0,0"
                Icon="ChatEmpty16" />
            <ResizeGrip Margin="0,0,-1,-1" Height="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="12">
                <ResizeGrip.Background>
                    <SolidColorBrush Opacity="0.28" />
                </ResizeGrip.Background>
            </ResizeGrip>
        </Grid>

    </Grid>
</ui:FluentWindow>
